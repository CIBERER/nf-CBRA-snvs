nextflow_process {

    name "Test Process GATK4_CALCULATEGENOTYPEPOSTERIORS"
    script "../main.nf"
    process "GATK4_CALCULATEGENOTYPEPOSTERIORS"

    tag "modules"
    tag "modules_nfcore"
    tag "gatk4"
    tag "gatk4/calculategenotypeposteriors"


    test("homo_sapiens - [vcf, tbi, [], ped]") {

        when {
            process {
                """
                input[0] = [
                    [id:"test"],
                    file('/mnt/tblab/yolanda/analysis_trios/merged.vcf.gz', checkIfExists: true),
                    file('/mnt/tblab/yolanda/analysis_trios/merged.vcf.gz.tbi', checkIfExists: true),
                    [],
                    file('/mnt/tblab/yolanda/analysis_trios/ped_file.ped', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
