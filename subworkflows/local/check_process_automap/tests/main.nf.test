nextflow_workflow {

    name "Test Subworkflow CHECK_PROCESS_AUTOMAP"
    script "../main.nf"
    workflow "CHECK_PROCESS_AUTOMAP"

    tag "subworkflows"
    tag "subworkflows/check_process_automap"


    test("automap - vcf") {

        when {
            workflow {
                """
                input[0] = Channel.of([
                    [ id:'test'], // meta map
                    file("https://raw.githubusercontent.com/mquinodo/AutoMap/refs/heads/master/Test/TestSample.vcf", checkIfExists: true)
                ])
                input[1] = "hg38"
                """
            }
        }
        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match()}
            )
        }
    }

    test("automap not working - vcf") {

        when {
            workflow {
                """
                input[0] = Channel.of([
                    [ id:'test'], // meta map
                    file("https://zenodo.org/records/15355673/files/Sample1_T1.dragen.PASS.vcf.gz?download=1", checkIfExists: true)
                ])
                input[1] = "hg38"
                """
            }
        }
        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match()}
            )
        }
    }
}